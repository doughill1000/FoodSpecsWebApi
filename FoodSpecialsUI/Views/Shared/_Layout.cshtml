@using FoodSpecialsUI.Constants;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jquery.timepicker.css" rel="stylesheet" />
    <link href="~/Content/typeahead.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Food Specials", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @if (Context.User.Identity.IsAuthenticated)
            {
                <div class="navbar-collapse collapse">
                    @if (Context.User.IsInRole(AuthConstants.Admin))
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Restaurants", "Index", "Restaurants")</li>
                            <li>@Html.ActionLink("Food Specials", "Index", "FoodSpecials")</li>
                        </ul>
                    }
                    <ul class="nav navbar-nav navbar-right">
                        <li><a class="navbar-no-hover">Welcome @User.Identity.Name! </a></li>
                        <li><a class="navbar-no-hover" href="@Url.Action("logout", "auth")">Log Out</a></li>
                    </ul>
                </div>
            }
        </div>
    </div>

    @Html.Partial("_CommonModal")

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; HillBros.Inc - Food Specials Version 1.0.0</p>
        </footer>
    </div>

    <script src="~/scripts/jquery-2.2.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/scripts/jquery.timepicker.min.js"></script>
    <script src="~/scripts/moment.min.js"></script>
    <script src="~/scripts/footable.min.js"></script>
    <script src="~/scripts/modernizr-2.8.3.js"></script>
    @*<script src="~/scripts/typeahead.jquery.min.js"></script>*@
    <script src="~/scripts/typeahead.bundle.min.js"></script>
    @*<script src="~/scripts/bootstrap3-typeahead.min.js"></script>*@
    <script src="~/scripts/typeahead.mvc.model.js"></script>
</body>
</html>